<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_TenNV"
                android:textSize="20sp"
                android:textColor="@color/mauXanhDollar"
                android:gravity="center"
                android:text="Tên nhân viên"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="Ngày sinh: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txt_NgaySinhNV"
                        android:paddingLeft="6dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="01/01/2000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/lbGiaKM"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="Quê quán: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txt_QueQuanNV"
                        android:paddingLeft="6dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="Hà Nội"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="Ngày vào làm: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txt_NgayVaoLam"
                        android:paddingLeft="6dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="01/08/2021"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ln1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingLeft="8dp"
                        android:textColor="@color/mauDo2"
                        android:gravity="center_vertical"
                        android:text="Ngày nghỉ việc: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txt_NgayKetThuc"
                        android:paddingLeft="6dp"
                        android:textColor="@color/mauDo2"
                        android:gravity="center_vertical"
                        android:text="08/11/2021"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:paddingLeft="8dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="Số điện thọai: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/txt_SDTNV"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="0123456789"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:paddingLeft="8dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="Email: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/txt_EmailNV"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="nguyenvanan1234@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>