<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mauXam">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/back"
            android:backgroundTint="@color/mauXam"
            android:id="@+id/imgBtnBack"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtMaDH"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn hàng : 1"
            android:textColor="@color/mauDo2"
            android:textSize="22sp"/>
        <ImageButton
            android:id="@+id/btnXacNhanDH"
            android:backgroundTint="@color/mauXam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_check_24"/>
    </RelativeLayout>

    <TableLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>

            <TextView
                android:layout_height="match_parent"
                android:text="Tên khách hàng: "
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/lbTenKH"
                android:layout_marginLeft="16dp"
                android:text="Nguyễn Thị Minh Tâm"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textColor="@color/black"
                android:text="Số điện thoại:"/>
            <TextView
                android:id="@+id/lbSDT"
                android:layout_marginLeft="16dp"
                android:text="0968707209"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textColor="@color/black"
                android:text="Email:"/>
            <TextView
                android:id="@+id/lbGmail"
                android:layout_marginLeft="16dp"
                android:text="Minhtam10@gmail.com"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textColor="@color/black"
                android:text="Địa chỉ giao hàng:"/>
            <TextView
                android:id="@+id/lbDCGiaoHang"
                android:layout_marginLeft="16dp"
                android:text="Cà Mau - Cái Nước - xã Phú Hưng"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:textColor="@color/black"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ghi chú của khách hàng:"/>
    <TextView
        android:paddingLeft="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/lbGhiChuKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gọi trước khi giao"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <TextView

        android:textSize="18sp"
        android:background="@color/mauDo2"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin đơn hàng"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:background="@color/white"
                android:id="@+id/lvCTDH"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>



</LinearLayout>