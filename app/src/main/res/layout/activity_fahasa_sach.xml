<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/mauXam">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/mauXam"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="10"
            android:layout_margin="16dp"
            android:backgroundTint="@color/mauXam"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:src="@drawable/back"
                android:backgroundTint="@color/mauXam"
                android:id="@+id/imgBtnBack"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <SearchView
                android:background="@color/white"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="8"
                android:id="@+id/fhsSearchView"
                android:queryHint="Nhập ở đây !"
                app:iconifiedByDefault="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/mauXam"
                android:textColor="@color/black"
                android:id="@+id/imgBtnThemSach"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Spinner
            android:id="@+id/spSach"
            android:background="@color/mauDo2"
            android:gravity="center|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <ListView
            android:id="@+id/lvSach"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

    </LinearLayout>

</LinearLayout>