<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrangChu">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerFahasa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_fahasa_nav"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_fahasa_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_bottom_nav_fahasa"
        app:itemIconTint="@color/tuychon_color_bottom_nav"
        app:itemTextColor="@color/tuychon_color_bottom_nav"
        app:itemBackground="@color/mauVangChuDao"
        />
</RelativeLayout>