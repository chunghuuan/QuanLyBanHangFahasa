<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/mauXam">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản trị viên"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/mauDo2"
        />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:background="@color/mauVangChuDao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/btnTXSNhanVien"
            android:backgroundTint="@color/mauVangChuDao"
            android:drawableTint="@color/mauDo2"
            android:textColor="@color/mauDo2"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/xemthuchi"
            android:text="Quản lý nhân viên"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/btnTaoBaoCao"
            android:backgroundTint="@color/mauVangChuDao"
            android:drawableTint="@color/mauDo2"
            android:textColor="@color/mauDo2"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/add"
            android:text="Tạo báo cáo đơn hàng"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/btnThongKe"
            android:backgroundTint="@color/mauVangChuDao"
            android:drawableTint="@color/mauDo2"
            android:textColor="@color/mauDo2"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingLeft="4dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/thongke"
            android:text="Thống kê tình hình bán hàng"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnDangXuat"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mauXanhNuoc"
        android:text="Đăng xuất"/>


</LinearLayout>
